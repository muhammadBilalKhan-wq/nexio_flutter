rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: Can only read/write their own data. Public data is readable by anyone.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;

      // Public profile data is readable by any authenticated user
      match /public_profile/{userId} {
        allow read: if request.auth.uid != null;
      }
    }

    // Posts: Authors can create/delete. Anyone can read.
    match /posts/{postId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid == request.resource.data.authorId;
      allow update: if request.auth.uid == resource.data.authorId;
      allow delete: if request.auth.uid == resource.data.authorId;
    }

    // Comments: Authors can create/delete. Anyone can read.
    match /posts/{postId}/comments/{commentId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid == request.resource.data.authorId;
      allow delete: if request.auth.uid == resource.data.authorId;
    }

    // Likes: Users can only like/unlike a post once.
    match /posts/{postId}/likes/{userId} {
        allow read: if request.auth.uid != null;
        allow create, delete: if request.auth.uid == userId;
    }

    // Follows: Users can follow/unfollow others.
    match /users/{followedId}/followers/{followerId} {
        allow create, delete: if request.auth.uid == followerId;
        allow read: if request.auth.uid != null;
    }

    match /users/{followerId}/following/{followedId} {
        allow create, delete: if request.auth.uid == followerId;
        allow read: if request.auth.uid != null;
    }

    // Notifications: Can only be read by the recipient.
    match /users/{userId}/notifications/{notificationId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null; // Server-side creation
    }
  }
}